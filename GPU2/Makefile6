FC = gfortran
#FC = gfortran44
FFLAGS = -O3 -Wall -fopenmp
#FFLAGS = -O3 -Wall
#FFLAGS = -O3 -fbounds-check
#FFLAGS = -g
CXX = g++ -O3 -Wall -march=core2
#CXX += p
CUDA_PATH = /usr/local/cuda
SDK_PATH = /usr/local/cuda_sdk
NVCC = $(CUDA_PATH)/bin/nvcc --host-compilation C++ -Xcompiler "-Wall -O3 -fopenmp" -I $(SDK_PATH)/common/inc/
NVCC += -arch sm_20 -Xptxas -dlcm=cg
RUNDIR = ./run

OBJECTS = $(SOURCE:.f=.o)

all: gpu sse

gpu: gpunb.gpu.o gpupot.gpu.o intgrt.o gpucor.o nbintp.o cnbint.o nbint.o start.o fpoly2a.o adjust.o energy2.o phicor.o cmfirr.o cmfirr2.o checkl2.o swap.o scale.o wtime.o cxvpred.o gpuirr.o jpred.o fpcorr2.o repair.o sweep2.o jpred2.o ksres3.o
	cp -f gpunb.gpu.o gpunb.o
	cp -f gpupot.gpu.o gpupot.o
	cp -f *.o ../Block
	make gpu -C ../Block -f ../GPU2/Makefile_gpu -j4
	mv -f ../Block/nbody6 $(RUNDIR)/nbody6b.gpu

sse: gpunb.sse.o gpupot.sse.o intgrt.o gpucor.o nbintp.o cnbint.o nbint.o start.o fpoly2a.o adjust.o energy2.o phicor.o cmfirr.o cmfirr2.o checkl2.o swap.o scale.o wtime.o cxvpred.o gpuirr.o jpred.o fpcorr2.o repair.o sweep2.o jpred2.o ksres3.o
	cp -f gpunb.sse.o gpunb.o
	cp -f gpupot.sse.o gpupot.o
	cp -f *.o ../Block
	make sse -C ../Block -f ../GPU2/Makefile_gpu -j8
	mv -f ../Block/nbody6 $(RUNDIR)/nbody6b.sse

cnbint.o: ./lib/cnbint.cpp
	$(CXX) -c $^

wtime.o: ./lib/wtime.cpp
	$(CXX) -c $^

cxvpred.o: ./lib/cxvpred.cpp
	$(CXX) -fopenmp -c $^

gpuirr.o: ./irrlib/gpuirr.sse.cpp
	$(CXX) -fopenmp -c $^ -o $@

gpuirr.s: ./irrlib/gpuirr.sse.cpp
	$(CXX) -fopenmp -S $^ -o $@

intgrt.o: intgrt.omp.f
	$(FC) $(FFLAGS) -fopenmp $^ -c -o $@ 

intgrt.s: intgrt.omp.f
	$(FC) $(FFLAGS) -fopenmp $^ -S -o $@

start.o: start.omp.F
	$(FC) $(FFLAGS) -fopenmp $^ -c -o $@

#gpunb.gpu.o: lib/gpunb.reduce.cu
gpunb.gpu.o: lib/gpunb.velocity.cu
	$(NVCC) $^ -c -o $@

gpupot.gpu.o: lib/gpupot.gpu.cu
	$(NVCC) $^ -c -o $@

gpunb.sse.o: lib/gpunb.sse.cpp
	$(CXX) -fopenmp $^ -c -o $@

gpupot.sse.o: lib/gpupot.sse.cpp
	$(CXX) -fopenmp $^ -c -o $@

clean:
	rm -f *.o

archive:
	tar -czvf ../gpu2.tar.gz ../GPU2	
